{# Use these marcros to include CDN assets #}

{% macro datatables() %}
    <script type="text/javascript" src="{{ asset('npm/js/datatables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('npm/js/dataTables.bootstrap5.min.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('npm/css/dataTables.bootstrap5.min.css') }}">
{% endmacro %}

{% macro chart(with_financial=false) %}
    <script type="text/javascript" src="{{ asset('chart.js@3.7', 'jsdelivr') }}"></script>{# Keep at 3.7 to have a working financial chart #}
    <script type="text/javascript" src="{{ asset('hammerjs@2.0', 'jsdelivr') }}"></script>
    <script type="text/javascript" src="{{ asset('date-fns', 'jsdelivr') }}"></script>
    <script type="text/javascript" src="{{ asset('chartjs-adapter-date-fns', 'jsdelivr') }}"></script>
    <script type="text/javascript" src="{{ asset('js/chartjs-plugin-zoom.min.js') }}"></script>
    {% if with_financial %}
    <script type="text/javascript" src="{{ asset('js/chartjs-chart-financial.min.js') }}" ></script>
    {% endif %}
{% endmacro %}

{% macro flag_icons() %}
    <link rel="stylesheet" href="{{ asset('flag-icons@6.11/css/flag-icons.min.css', 'jsdelivr') }}" />
{% endmacro %}

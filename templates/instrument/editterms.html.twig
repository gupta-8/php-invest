{% extends 'base.html.twig' %}

{% block title %}Instrument terms editor{% endblock %}

{% block body %}
{{ parent() }}
{{ form_start(form) }}

<div class="row">
  <div class="col-md-4">{{ form_row(form.date) }}</div>
  {% if form.ratio is defined %}<div class="col-md-4">{{ form_row(form.ratio) }}</div>{% endif %}
  {% if form.interest_rate is defined %}<div class="col-md-4">{{ form_row(form.interest_rate) }}</div>{% endif %}
  {% if form.strike is defined %}<div class="col-md-4">{{ form_row(form.strike) }}</div>{% endif %}
  {% if form.barrier is defined %}<div class="col-md-4">{{ form_row(form.barrier) }}</div>{% endif %}
  {% if form.cap is defined %}<div class="col-md-4">{{ form_row(form.cap) }}</div>{% endif %}
  {% if form.bonus_level is defined %}<div class="col-md-4">{{ form_row(form.bonus_level) }}</div>{% endif %}
  {% if form.reverse_level is defined %}<div class="col-md-4">{{ form_row(form.reverse_level) }}</div>{% endif %}
  {% if form.margin is defined %}<div class="col-md-4">{{ form_row(form.margin) }}</div>{% endif %}
</div>

<div>{{ form_errors(form) }}</div>

<div class="input-group mb-3">
{{ form_widget(form.save) }}
{{ form_widget(form.reset) }}
{{ form_widget(form.back) }}
</div>

{{ form_end(form) }}

<script>
$("#instrument_terms_back").click(function() { history.back(); });
</script>

{% endblock %}

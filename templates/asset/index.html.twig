{% extends 'basedatatable.html.twig' %}

{% block title %}Assets{% endblock %}

{% block body %}
<h1>Assets</h1>

{% if assets %}
    <table id="datatable" class="table table-striped">
      <thead>
        <tr>
          <th>Name</th><th>Symbol</th><th>ISIN</th><th>Type</th><th>Country</th><th>Last price</th><th></th>
        </tr>
      </thead>
      <tbody>
      {% for a in assets %}
      <tr>
        <td><a href="{{ path('asset_show', {id: a.asset.id}) }}">{{ a.asset.name }}</a></td>
        <td><span class="badge bg-secondary">{{ a.asset.symbol }}</span></td>
        <td>{{ a.asset.isin }}</td>
        <td>{{ a.asset.typename }}</td>
        <td>{{ a.asset.country }}</td>
        {% if a.price %}
        <td class="dt-right" data-order="{{ a.price.close }}" title="{{a.price.date | date("Y-m-d")}}">{{ a.price.close | format_currency(a.asset.currency) }}</td>
        {% else %}
        <td></td>
        {% endif %}
        <td>
          <a href="{{ path('asset_edit', {id: a.asset.id}) }}" class="bi-pencil-square" data-op="edit" title="Edit"></a>&nbsp;
          <a href="#" class="bi-trash" data-op="delete" data-name="{{ a.asset.name }}" data-id="{{ path('asset_delete', {id: a.asset.id}) }}" title="Delete"></a>&nbsp;
          {% if a.asset.url %}
          <a href="{{ a.asset.url }}" class="bi-info-circle" target="_blank" title="Asset information"></a>&nbsp;
          {% endif %}
        </td>
      </tr>
      {% endfor %}
      </tbody>
    </table>
{% else %}
  <br>
{% endif %}
  <a href="{{ path('asset_new') }}" class="btn btn-primary">New asset</a>
{% endblock %}

{% block bodyscripts %}
  <script class="init">
        $(document).ready( function () {
            $('#datatable').DataTable({
              "order": [[0, 'asc']]
            });
        } );
  </script>
  <script src="{{ asset('js/formtools.js') }}"></script>
{% endblock %}

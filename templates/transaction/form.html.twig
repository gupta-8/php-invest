{% extends 'base.html.twig' %}

{% block body %}
<h1>{% block bodytitle %}Edit transaction{% endblock %}</h1>
{{ form_start(form) }}

<div class="row">
  <div class="col-md-6">{{ form_row(form.time) }}</div>
  <div class="col-md-6">{{ form_row(form.external_id) }}</div>
  <div class="col-md-6">{{ form_row(form.cash) }}</div>
  <div class="col-md-6">{{ form_row(form.consolidation) }}</div>
  <div class="col-12">{{ form_row(form.notes) }}</div>
</div>

<div>{{ form_errors(form) }}</div>

<div class="input-group mb-3">
{{ form_widget(form.save) }}
{{ form_widget(form.reset) }}
</div>

{{ form_end(form) }}
{% endblock %}

{% extends 'basedatatable.html.twig' %}

{% block title %}Accounts{% endblock %}

{% block body %}
<h1>Accounts</h1>

{% if accounts %}
    <table id="datatable" class="table table-striped">
      <thead>
        <tr>
          <th>Name</th><th>Number</th><th>Currency</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for a in accounts %}
      <tr>
        <td>{{ a.name }}</td>
        <td>{{ a.number }}</td>
        <td>{{ a.currency }}</td>
        <td>
          {#
          <a href="{{ path('account_edit', {id: a.id}) }}" class="bi bi-pencil-square" data-op="edit"></a>&nbsp;
          <a href="#" class="bi bi-trash" data-op="delete" data-name="{{ a.name }}" data-id="{{ path('account_delete', {id: a.id}) }}"></a>
          #}
        </td>
      </tr>
      {% endfor %}
      </tbody>
    </table>
{% else %}
  <br>
{% endif %}
  <a href="{{ path('account_new') }}" class="btn btn-primary">New account</a>
{% endblock %}

{% block bodyscripts %}
  {{ parent() }}
  <script src="{{ asset('js/formtools.js') }}"></script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Order Execution Editor{% endblock %}

{% block body %}
{{ parent() }}
{{ form_start(form) }}

<div class="row">
  <div class="col-md-12">{{ form_row(form.instrument) }}</div>
  <div class="col-md-4">{{ form_row(form.time) }}</div>
  <div class="col-md-4">{{ form_row(form.direction) }}</div>
  <div class="col-md-4">{{ form_row(form.account) }}</div>
  <div class="col-md-4">{{ form_row(form.type) }}</div>
  <div class="col-md-4">{{ form_row(form.execution_id) }}</div>
  <div class="col-md-4">{{ form_row(form.transaction_id) }}</div>
  <div class="col-md-3">{{ form_row(form.volume) }}</div>
  <div class="col-md-3">{{ form_row(form.currency) }}</div>
  <div class="col-md-3">{{ form_row(form.price) }}</div>
  <div class="col-md-3">{{ form_row(form.exchange_rate) }}</div>
  <div class="col-md-3">{{ form_row(form.commission) }}</div>
  <div class="col-md-3">{{ form_row(form.tax) }}</div>
  <div class="col-md-3">{{ form_row(form.interest) }}</div>
  <div class="col-md-3">{{ form_row(form.consolidated) }}</div>
  <div class="col-12">{{ form_row(form.notes) }}</div>
</div>

<div>{{ form_errors(form) }}</div>

<div class="input-group mb-3">
{{ form_widget(form.save) }}
{{ form_widget(form.reset) }}
{{ form_widget(form.back) }}
</div>

<input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}" />
{{ form_end(form) }}

<script>
$("#execution_back").click(function() { history.back(); });
</script>

{% endblock %}
